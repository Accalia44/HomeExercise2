<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <TextView
            android:text="MyTitel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MyTitelID" android:layout_marginTop="18dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:typeface="normal" android:textStyle="bold"
            android:textSize="18sp"/>
    <TextView
            android:text="MyNote"
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:id="@+id/MyNoteID" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/MyTitelID" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"/>
</android.support.constraint.ConstraintLayout>